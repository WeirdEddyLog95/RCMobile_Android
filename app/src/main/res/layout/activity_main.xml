<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgar_rangel.controlrc.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="143dp">

    <Button
        android:id="@+id/FowardSteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="140dp" />

    <Button
        android:id="@+id/ReverseSteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="140dp" />

    <Button
        android:id="@+id/LeftSteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/RightSteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="230dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="500dp">

        <Button
            android:id="@+id/config1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="260dp"/>

        <Button
            android:id="@+id/Shutdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Shutdown"
            android:layout_alignTop="@+id/config1" />

        <SeekBar
            android:id="@+id/RPMBar"
            android:layout_width="290dp"
            android:layout_height="53dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/RPMBar"
            android:layout_alignLeft="@+id/RPMBar"
            android:layout_alignStart="@+id/RPMBar"
            android:layout_marginBottom="53dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:textSize="20dp"
            android:text="Speed" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="210dp"
            android:textSize="20dp"
            android:text="Low" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:textSize="20dp"
            android:layout_alignTop="@+id/textView5"
            android:text="High" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
